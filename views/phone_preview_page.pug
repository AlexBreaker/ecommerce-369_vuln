doctype html
html(lang="en")
  head
    title iPhone 14 Preview
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet")
    script.
      // Dark mode toggle
      if (localStorage.theme === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
        document.documentElement.classList.add('dark')
      }
      function toggleDarkMode() {
        document.documentElement.classList.toggle('dark')
        localStorage.theme = document.documentElement.classList.contains('dark') ? 'dark' : 'light'
      }
  body(class=['bg-gray-100', 'dark:bg-gray-900', 'transition-colors', 'duration-300'])
    // Header
    header(class=['bg-white', 'dark:bg-gray-800', 'shadow', 'sticky', 'top-0', 'z-10'])
      div(class=['container', 'mx-auto', 'px-4', 'py-4', 'flex', 'justify-between', 'items-center'])
        h1(class=['text-2xl', 'font-bold', 'text-gray-800', 'dark:text-white']) iPhone Store
        nav(class=['flex', 'items-center'])
          a(href="/login" class=['text-blue-500', 'hover:underline', 'mr-4', 'dark:text-blue-300']) Login
          a(href="/register" class=['text-blue-500', 'hover:underline', 'mr-4', 'dark:text-blue-300']) Register
          button(onclick="toggleDarkMode()" class=['p-2', 'rounded', 'bg-gray-200', 'dark:bg-gray-700', 'text-gray-800', 'dark:text-white']) Toggle Dark Mode

    // Main Content
    main(class=['container', 'mx-auto', 'px-4', 'py-8'])
      // Hero Section
      section(class=['text-center', 'mb-12'])
        h2(class=['text-4xl', 'sm:text-5xl', 'font-bold', 'text-gray-800', 'dark:text-white', 'mb-4', 'font-sans', 'tracking-tight']) iPhone 14
        p(class=['text-xl', 'text-gray-600', 'dark:text-gray-300', 'mb-6']) Discover the power of innovation.
        img(src="/IPHONE14_blue_1.jpeg" alt="iPhone 14" class=['mx-auto', 'w-full', 'max-w-md', 'h-auto', 'object-cover', 'rounded-lg', 'shadow-lg', 'mb-6'] loading="lazy")
        p(class=['text-3xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-4']) Starting at $799
        a(href="/buy-iphone14" class=['inline-block', 'bg-blue-500', 'text-white', 'px-6', 'py-3', 'rounded-full', 'text-lg', 'font-medium', 'hover:bg-blue-600', 'transition']) Buy Now

      // Features Section
      section(class=['mb-12'])
        h3(class=['text-3xl', 'font-semibold', 'text-center', 'text-gray-800', 'dark:text-white', 'mb-8']) Key Features
        div(class=['grid', 'grid-cols-1', 'sm:grid-cols-2', 'lg:grid-cols-3', 'gap-6'])
          // Feature 1: Display
          div(class=['bg-white', 'dark:bg-gray-800', 'rounded-xl', 'shadow-lg', 'p-6', 'text-center'])
            svg(class=['w-12', 'h-12', 'mx-auto', 'mb-4', 'text-blue-500', 'dark:text-blue-300'] xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z")
            h4(class=['text-xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-2']) 6.1-inch Super Retina XDR
            p(class=['text-gray-600', 'dark:text-gray-400']) Vibrant display with stunning clarity and color accuracy.

          // Feature 2: Chip
          div(class=['bg-white', 'dark:bg-gray-800', 'rounded-xl', 'shadow-lg', 'p-6', 'text-center'])
            svg(class=['w-12', 'h-12', 'mx-auto', 'mb-4', 'text-blue-500', 'dark:text-blue-300'] xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z")
            h4(class=['text-xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-2']) A15 Bionic Chip
            p(class=['text-gray-600', 'dark:text-gray-400']) Lightning-fast performance for all your tasks.

          // Feature 3: Camera
          div(class=['bg-white', 'dark:bg-gray-800', 'rounded-xl', 'shadow-lg', 'p-6', 'text-center'])
            svg(class=['w-12', 'h-12', 'mx-auto', 'mb-4', 'text-blue-500', 'dark:text-blue-300'] xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z")
            h4(class=['text-xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-2']) Advanced Dual-Camera
            p(class=['text-gray-600', 'dark:text-gray-400']) Capture stunning photos with 12MP wide and ultra-wide lenses.

          // Feature 4: Safety
          div(class=['bg-white', 'dark:bg-gray-800', 'rounded-xl', 'shadow-lg', 'p-6', 'text-center'])
            svg(class=['w-12', 'h-12', 'mx-auto', 'mb-4', 'text-blue-500', 'dark:text-blue-300'] xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm1-13h-2v6h2V7zm0 8h-2v2h2v-2z")
            h4(class=['text-xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-2']) Crash Detection
            p(class=['text-gray-600', 'dark:text-gray-400']) Automatically alerts emergency services in case of a severe crash.

          // Feature 5: Connectivity
          div(class=['bg-white', 'dark:bg-gray-800', 'rounded-xl', 'shadow-lg', 'p-6', 'text-center'])
            svg(class=['w-12', 'h-12', 'mx-auto', 'mb-4', 'text-blue-500', 'dark:text-blue-300'] xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l9-6 9 6v12a2 2 0 01-2 2H5a2 2 0 01-2-2V8z")
            h4(class=['text-xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-2']) Emergency SOS via Satellite
            p(class=['text-gray-600', 'dark:text-gray-400']) Connect to emergency services even without cellular or Wi-Fi.

          // Feature 6: Battery
          div(class=['bg-white', 'dark:bg-gray-800', 'rounded-xl', 'shadow-lg', 'p-6', 'text-center'])
            svg(class=['w-12', 'h-12', 'mx-auto', 'mb-4', 'text-blue-500', 'dark:text-blue-300'] xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z")
            h4(class=['text-xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-2']) All-Day Battery Life
            p(class=['text-gray-600', 'dark:text-gray-400']) Up to 20 hours of video playback.

    // Footer
    footer(class=['bg-gray-800', 'dark:bg-gray-900', 'text-white', 'py-4'])
      div(class=['container', 'mx-auto', 'px-4', 'text-center'])
        p(class=['text-sm']) Â© 2025 iPhone Store. All rights reserved.
        a(href="/contact" class=['text-blue-300', 'hover:underline', 'ml-4']) Contact Us
        a(href="/privacy" class=['text-blue-300', 'hover:underline', 'ml-4']) Privacy Policy