doctype html
html(lang="en")
  head
    title=name
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet")
    script.


  body(class=['bg-gray-100', 'dark:bg-gray-900', 'transition-colors', 'duration-300'])
    // Header
    header(class=['bg-white', 'dark:bg-gray-800', 'shadow', 'sticky', 'top-0', 'z-10'])
      div(class=['container', 'mx-auto', 'px-4', 'py-4', 'flex', 'justify-between', 'items-center'])
        a(href='/' class=['text-blue-500', 'hover:underline', 'dark:text-blue-300'])
          h1(class=['text-2xl', 'font-bold', 'text-gray-800', 'dark:text-white']) iPhone Store
        nav(class=['flex', 'items-center'])
          a(href="/login" class=['text-blue-500', 'hover:underline', 'mr-4', 'dark:text-blue-300']) Login
          a(href="/register" class=['text-blue-500', 'hover:underline', 'mr-4', 'dark:text-blue-300']) Register

    // Main Content
    main(class=['container', 'mx-auto', 'px-4', 'py-8'])
      // Hero Section
      section(class=['text-center', 'mb-12'])
        h2(class=['text-4xl', 'sm:text-5xl', 'font-bold', 'text-gray-800', 'dark:text-white', 'mb-4', 'font-sans', 'tracking-tight'])=name
        p(class=['text-xl', 'text-gray-600', 'dark:text-gray-300', 'mb-6']) Discover the power of innovation.
        img(src=IMG_LOCATION alt="iPhone 14" class=['mx-auto', 'w-full', 'max-w-md', 'h-auto', 'object-cover', 'rounded-lg', 'shadow-lg', 'mb-6'] loading="lazy")
        p(class=['text-3xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-4']) Starting at $799
        // POST route to handle form submission
        form(action = "phones/stock", method = "POST" id="stockCheckForm")
                input(name = "stockApi"  value=stockApi hidden)
                button(type = "submit" class=['inline-block', 'bg-blue-500', 'text-white', 'px-6', 'py-3', 'rounded-full', 'text-lg', 'font-medium', 'hover:bg-blue-600', 'transition']) Check Quantity 
        span(id="stockResult")=stock_value_placeholder




      // Features Section
      section(class=['mb-12'])
        h3(class=['text-3xl', 'font-semibold', 'text-center', 'text-gray-800', 'dark:text-white', 'mb-8']) Key Features
        div(class=['grid', 'grid-cols-1', 'sm:grid-cols-2', 'lg:grid-cols-3', 'gap-6'])
          // Feature 1: Display
          div(class=['bg-white', 'dark:bg-gray-800', 'rounded-xl', 'shadow-lg', 'p-6', 'text-center'])
            svg(class=['w-12', 'h-12', 'mx-auto', 'mb-4', 'text-blue-500', 'dark:text-blue-300'] xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z")
            h4(class=['text-xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-2'])=f1
            p(class=['text-gray-600', 'dark:text-gray-400'])=f2

          // Feature 2: Chip
          div(class=['bg-white', 'dark:bg-gray-800', 'rounded-xl', 'shadow-lg', 'p-6', 'text-center'])
            svg(class=['w-12', 'h-12', 'mx-auto', 'mb-4', 'text-blue-500', 'dark:text-blue-300'] xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z")
            h4(class=['text-xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-2'])=f3
            p(class=['text-gray-600', 'dark:text-gray-400'])=f4

          // Feature 3: Camera
          div(class=['bg-white', 'dark:bg-gray-800', 'rounded-xl', 'shadow-lg', 'p-6', 'text-center'])
            svg(class=['w-12', 'h-12', 'mx-auto', 'mb-4', 'text-blue-500', 'dark:text-blue-300'] xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z")
            h4(class=['text-xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-2'])=f5
            p(class=['text-gray-600', 'dark:text-gray-400'])=f6

          // Feature 4: Safety
          div(class=['bg-white', 'dark:bg-gray-800', 'rounded-xl', 'shadow-lg', 'p-6', 'text-center'])
            svg(class=['w-12', 'h-12', 'mx-auto', 'mb-4', 'text-blue-500', 'dark:text-blue-300'] xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm1-13h-2v6h2V7zm0 8h-2v2h2v-2z")
            h4(class=['text-xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-2'])=f7
            p(class=['text-gray-600', 'dark:text-gray-400'])=f8

          // Feature 5: Connectivity
          div(class=['bg-white', 'dark:bg-gray-800', 'rounded-xl', 'shadow-lg', 'p-6', 'text-center'])
            svg(class=['w-12', 'h-12', 'mx-auto', 'mb-4', 'text-blue-500', 'dark:text-blue-300'] xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l9-6 9 6v12a2 2 0 01-2 2H5a2 2 0 01-2-2V8z")
            h4(class=['text-xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-2'])=f9
            p(class=['text-gray-600', 'dark:text-gray-400'])=f10

          // Feature 6: Battery
          div(class=['bg-white', 'dark:bg-gray-800', 'rounded-xl', 'shadow-lg', 'p-6', 'text-center'])
            svg(class=['w-12', 'h-12', 'mx-auto', 'mb-4', 'text-blue-500', 'dark:text-blue-300'] xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor")
              path(stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z")
            h4(class=['text-xl', 'font-semibold', 'text-gray-800', 'dark:text-white', 'mb-2'])=f11
            p(class=['text-gray-600', 'dark:text-gray-400'])=f12

    // Footer
    footer(class=['bg-gray-800', 'dark:bg-gray-900', 'text-white', 'py-4'])
      div(class=['container', 'mx-auto', 'px-4', 'text-center'])
        p(class=['text-sm']) Â© 2025 iPhone Store. All rights reserved.
        a(href="/contact" class=['text-blue-300', 'hover:underline', 'ml-4']) Contact Us
        a(href="/privacy" class=['text-blue-300', 'hover:underline', 'ml-4']) Privacy Policy

  
